{
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "outDir": "lib",
        "types": ["node"],
        "typeRoots": ["src/types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
}